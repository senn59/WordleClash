@page
@using WordleClash.Core
@using WordleClash.Core.Enums
@model WordleClash.Web.Pages.SingleplayerModel

@{
    ViewData["Title"] = "Singleplayer";
}
@section Styles
{
    <link rel="stylesheet" href="~/css/postgameoverlay.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/wordlegame.css" asp-append-version="true"/>
}
<div class="page__container">
    @{
        if (Model.Game.Status is GameStatus.Won or GameStatus.Lost)
        {
            <div class="game-end-overlay__container">
                <div class="game-end-overlay__base">
                    <form method="post" id="restartForm">
                        @if (Model.Game.Status == GameStatus.Won)
                        {
                            <div class="game-end-overlay__icon">&#127942;</div>
                            <h1>YOU WIN!</h1>
                        }
                        else
                        {
                            <h1>YOU LOSE!</h1>
                        }
                        <div class="game-end-overlay__buttons">
                            <button class="btn__base btn__primary" type="submit">New Game</button>
                            <button class="btn__base btn__danger" onclick="CloseOverlay()">Close</button>
                        </div>
                        <input type="hidden" name="NewGame" value="true"/>
                    </form>
                </div>
            </div>
        }
    }
    <div class="wordle__container">
        <div class="wordle__base">
            @for (var i = 0; i < Model.Game.MaxTries; i++)
            {
                <div class="wordle__row">
                    @if (i < Model.Game.MoveHistory.Count && Model.Game.MoveHistory.Count > 0)
                    {
                        @foreach (var lr in Model.Game.MoveHistory[i].WordAnalysis)
                        {
                            <div class="wordle__tile @lr.Feedback">@lr.Letter</div>
                        }
                    }
                    else
                    {
                        @for (var j = 0; j < 5; j++)
                        {
                            <div class="wordle__tile"></div>
                        }
                    }
                </div>
            }
        </div>
        <div class="letters__container">
            @{
                var alphabet = "ABCDEFGHIJKLMNOPQRSTUVWXYZ".ToCharArray();
                foreach (var letter in alphabet)
                {
                    <span class="@GetClassName(letter)">@letter</span>
                }
            }
        </div>
    </div>

</div>
<form method="post" id="guessForm">
    <input type="hidden" name="Guess" id="guessInput">
</form>

@functions
{
    List<LetterResult> GetUsedLetters()
    {
        List<LetterResult> usedLetters = [];
        foreach (var guessResult in Model.Game.MoveHistory)
        {
            usedLetters.AddRange(guessResult.WordAnalysis);
        }
        return usedLetters;
    }

    string GetClassName(char letter)
    {
        var className = "Unused";
        var occurences = GetUsedLetters()
            .Where(l => l.Letter == letter)
            .Select(l => l.Feedback)
            .ToList();
        if (occurences.Count == 1)
        {
            className = occurences[0].ToString();
        }
        else if (occurences.Count > 1)
        {
            className = 
                occurences.Contains(LetterFeedback.CorrectPosition)
                ? LetterFeedback.CorrectPosition.ToString()
                : occurences[0].ToString();
        }
        return className;
    }
}

@section Scripts {
<script src="~/js/WriteInTiles.js" asp-append-version="true"></script>
<script>
    const CloseOverlay = () => {
        document.querySelector(".game-end-overlay").remove();
    }
</script>
}
